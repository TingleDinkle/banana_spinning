{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build banana",
      "type": "shell",
      "command": "gcc",
      "args": [
        "-std=c11",
        "${workspaceFolder}/banana.c",
        "-o",
        "${workspaceFolder}/banana.exe",
        "-lm"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": [
        "$gcc"
      ]
    }
  ]
}
