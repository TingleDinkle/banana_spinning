        {
            "name": "Run Banana (C) - No Debugger",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/banana/banana_c.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/banana",
            "environment": [],
            "console": "externalTerminal",
            "preLaunchTask": "Build Ultra-Optimized C"
        },
        {
            "name": "Debug Banana (C++) - GDB",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/banana/banana_cpp.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/banana",
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
            "miDebuggerPath": "C:\\MinGW\\bin\\gdb.exe",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Build Ultra-Optimized C++"
        }
    ]
