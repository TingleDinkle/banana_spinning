    "configurations": [
        {
            "name": "Run Banana (C++) - No Debugger",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/banana/banana_cpp.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/banana",
            "environment": [],
